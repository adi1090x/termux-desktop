#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

initializeANSI

cat << EOF

  ${boldon}${redf}    â–ˆ    ${reset}    ${boldon}${greenf}    â–ˆ    ${reset}    ${boldon}${yellowf}    â–ˆ    ${reset}    ${boldon}${bluef}    â–ˆ    ${reset}    ${boldon}${purplef}    â–ˆ    ${reset}    ${boldon}${cyanf}    â–ˆ    ${reset}
  ${boldon}${redf}â–„â–„  â–ˆ  â–„â–„${reset}    ${boldon}${greenf}â–„â–„  â–ˆ  â–„â–„${reset}    ${boldon}${yellowf}â–„â–„  â–ˆ  â–„â–„${reset}    ${boldon}${bluef}â–„â–„  â–ˆ  â–„â–„${reset}    ${boldon}${purplef}â–„â–„  â–ˆ  â–„â–„${reset}    ${boldon}${cyanf}â–„â–„  â–ˆ  â–„â–„${reset}
  ${boldon}${redf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${greenf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${yellowf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${bluef}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${purplef}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${cyanf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}
  ${boldon}${redf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${greenf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${yellowf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${bluef}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${purplef}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${boldon}${cyanf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}
  ${boldon}${redf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${boldon}${greenf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${boldon}${yellowf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${boldon}${bluef}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${boldon}${purplef}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${boldon}${cyanf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}
  
  ${redf}    â–ˆ    ${reset}    ${greenf}    â–ˆ    ${reset}    ${yellowf}    â–ˆ    ${reset}    ${bluef}    â–ˆ    ${reset}    ${purplef}    â–ˆ    ${reset}    ${cyanf}    â–ˆ    ${reset}
  ${redf}â–„â–„  â–ˆ  â–„â–„${reset}    ${greenf}â–„â–„  â–ˆ  â–„â–„${reset}    ${yellowf}â–„â–„  â–ˆ  â–„â–„${reset}    ${bluef}â–„â–„  â–ˆ  â–„â–„${reset}    ${purplef}â–„â–„  â–ˆ  â–„â–„${reset}    ${cyanf}â–„â–„  â–ˆ  â–„â–„${reset}
  ${redf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${greenf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${yellowf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${bluef}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${purplef}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}    ${cyanf}â–ˆâ–ˆâ–ˆâ–€â–€â–€â–ˆâ–ˆâ–ˆ${reset}
  ${redf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${greenf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${yellowf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${bluef}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${purplef}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}    ${cyanf}â–ˆâ–ˆâ–ˆ â–ˆ â–ˆâ–ˆâ–ˆ${reset}
  ${redf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${greenf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${yellowf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${bluef}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${purplef}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}    ${cyanf}â–ˆâ–ˆ â–€â–€â–€ â–ˆâ–ˆ${reset}  
  
EOF
  
